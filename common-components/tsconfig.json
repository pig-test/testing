{
    "compilerOptions": {
        "jsx": "react",
        "esModuleInterop": true,
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "sourceMap": true,
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules/*", "src/**/*.test.tsx", "src/**/*.stories.tsx"]
}
